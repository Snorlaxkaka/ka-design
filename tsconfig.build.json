{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext", // 输出的类型
    "target": "ES5",
    "declaration": true, // 生产.d.ts
    "jsx": "react",
    "moduleResolution": "node", // 按node方式加载模块
    "allowSyntheticDefaultImports": true, // 允许 import React from 'react'方式引入
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      // "mime",
      // "parse-json",
      // "prettier"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.tsx"
  ]
}